<?xml version="1.0" encoding="UTF-8"?>
<xs:schema targetNamespace="xmlns://www.fortify.com/schema/pluginmanifest-1.0.xsd"
           xmlns:tns="xmlns://www.fortify.com/schema/pluginmanifest-1.0.xsd"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"

           xml:lang="EN"
           attributeFormDefault="unqualified"
           elementFormDefault="qualified"
           version="1.0">

    <xs:simpleType name="ValueType">
        <xs:restriction base="xs:string">
            <xs:enumeration value="STRING"/>
            <xs:enumeration value="LONG_STRING"/>
            <xs:enumeration value="DECIMAL"/>
            <xs:enumeration value="DATE"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="ImageType">
        <xs:restriction base="xs:string">
            <xs:enumeration value="icon"/>
            <xs:enumeration value="logo"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="PluginId">
        <xs:restriction base="xs:string">
            <xs:pattern value="[\w\\.\\_\\-]*"/>
            <xs:minLength value="1"/>
            <xs:maxLength value="80"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="ApiVersion">
        <xs:restriction base="xs:string">
            <xs:pattern value="(\d{1,2})(\.\d{1,4}){0,2}"/>
            <xs:minLength value="1"/>
            <xs:maxLength value="8"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="PluginVersion">
        <xs:restriction base="xs:string">
            <xs:pattern value="\d{1,9}(\.\d{1,9}(\.\d{1,9}(\.\d{1,19})?)?)?"/>
            <xs:minLength value="1"/>
            <xs:maxLength value="25"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="PluginName">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
            <xs:maxLength value="80"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="PluginDescription">
        <xs:restriction base="xs:string">
            <xs:maxLength value="500"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="LanguageId">
        <xs:restriction base="xs:string">
            <xs:pattern value="(default)|([a-z]{2})|([a-z]{2}-[A-Z]{2})"/>
            <xs:maxLength value="10"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="EngineType">
        <xs:restriction base="xs:string">
            <xs:pattern value="[A-Z0-9\\-\\_\\. ]+"/>
            <xs:minLength value="1"/>
            <xs:maxLength value="80"/>
        </xs:restriction>
    </xs:simpleType>

    <!-- can allow cases like [3], [1.2 , 4.5), (1.2.3, 4.5.6) -->
    <xs:simpleType name="SupportedEngineVersions">
        <xs:restriction base="xs:string">
            <xs:pattern value="(\(|\[)(\d{1,8})(\.\d{1,8}){0,2}(\s*,\s*(\d{1,8})(\.\d{1,8}){0,2})?(\)|\])"/>
            <xs:minLength value="1"/>
            <xs:maxLength value="40"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="VendorName">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
            <xs:maxLength value="80"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="VendorUrl">
        <xs:restriction base="xs:string">
            <xs:maxLength value="100"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="ViewTemplateDescription">
        <xs:restriction base="xs:string">
            <xs:maxLength value="250"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:element name="plugin" type="tns:PluginDescriptor"/>

    <xs:complexType name="PluginDescriptor">
        <xs:sequence>
            <xs:element name="plugin-info" type="tns:PluginInfo" nillable="false" minOccurs="1" maxOccurs="1"/>
            <xs:element name="issue-parser" type="tns:IssueParser" minOccurs="0" maxOccurs="1"/>
        </xs:sequence>
        <xs:attribute type="tns:PluginId" name="id" use="required"/>
        <xs:attribute type="tns:ApiVersion" name="api-version" use="required"/>
    </xs:complexType>

    <xs:complexType name="PluginInfo">
        <xs:sequence>
            <xs:element type="tns:PluginName" name="name" nillable="false" minOccurs="1" maxOccurs="1"/>
            <xs:element type="tns:PluginVersion" name="version" nillable="false" minOccurs="1" maxOccurs="1"/>
            <xs:element type="xs:integer" name="data-version" nillable="false" minOccurs="1" maxOccurs="1"/>
            <xs:element type="tns:Vendor" name="vendor" nillable="false" minOccurs="1" maxOccurs="1"/>
            <xs:element type="tns:PluginDescription" name="description" minOccurs="0" maxOccurs="1"/>
            <xs:element type="tns:Resources" name="resources" minOccurs="0" maxOccurs="1"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="Vendor">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute type="tns:VendorName" name="name" use="required"/>
                <xs:attribute type="tns:VendorUrl" name="url" use="optional"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <xs:complexType name="Resources">
        <xs:sequence>
            <xs:element type="tns:Localization" name="localization" minOccurs="0" maxOccurs="1"/>
            <xs:element type="tns:Images" name="images" minOccurs="0" maxOccurs="1"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="Localization">
        <xs:sequence>
            <xs:element type="tns:Language" name="language" minOccurs="0" maxOccurs="200"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="Language">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute type="tns:LanguageId" name="id" use="required"/>
                <xs:attribute type="xs:string" name="location" use="required"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <xs:complexType name="Images">
        <xs:sequence>
            <xs:element type="tns:Image" name="image" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="Image">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute type="tns:ImageType" name="imageType" use="required"/>
                <xs:attribute type="xs:string" name="location" use="required"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <xs:complexType name="ViewTemplate">
        <xs:sequence>
            <xs:element name="description" type="tns:ViewTemplateDescription" minOccurs="0" maxOccurs="1"/>
        </xs:sequence>
        <xs:attribute type="xs:string" name="location" use="required"/>
    </xs:complexType>

    <xs:complexType name="IssueParser">
        <xs:sequence>
            <xs:element type="tns:EngineType" name="engine-type" nillable="false" minOccurs="1" maxOccurs="1"/>
            <xs:element type="tns:SupportedEngineVersions" name="supported-engine-versions" minOccurs="0" maxOccurs="1"/>
            <xs:element type="tns:ViewTemplate" name="view-template" minOccurs="0" maxOccurs="1"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>
